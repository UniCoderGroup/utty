{
  "name": "utty",
  "version": "1.0.0",
  "description": "An universal tty framework.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "cross-env TS_NODE_PROJECT=tsconfig.json node-dev --respawn --deps=-1 --clear src/test.ts",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "compile": "babel src --out-dir build --extensions \".ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UniCoderGroup/utty.git"
  },
  "keywords": [
    "tty"
  ],
  "author": "_Kerman@UniCoder",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/UniCoderGroup/utty/issues"
  },
  "homepage": "https://github.com/UniCoderGroup/utty#readme",
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/plugin-transform-typescript": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@types/jest": "27.4.0",
    "@types/node": "^17.0.0",
    "cross-env": "^7.0.3",
    "jest": "^27.4.5",
    "node-dev": "^7.1.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "strip-ansi": "^7.0.1"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  }
}
